const DISABLED_PLATFORMS = [
	\"Android\",
	\"iOS\",
	\"HTML5\",
]

func _ready():
	# disable button if on mobile or web
	var platformName = OS.get_name()
	if (platformName in DISABLED_PLATFORMS):
		self.disabled = true

func _pressed():
	self.get_tree().quit()
"

